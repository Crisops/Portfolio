---
import '@fontsource/hind-guntur/300.css';
import '@fontsource/hind-guntur/400.css';
import '@fontsource/hind-guntur/500.css';
import '@fontsource/hind-guntur/600.css';
import '@fontsource/hind-guntur/700.css';
import '@fontsource-variable/crimson-pro';
import '@fontsource/hind-vadodara/300.css';
import '@fontsource/hind-vadodara/400.css';
import '@fontsource/hind-vadodara/500.css';
import '@fontsource/hind-vadodara/600.css';
import '@fontsource/hind-vadodara/700.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta property="og:title" content="Crisops: Desarrollador de interfaces web" />
		<meta property="og:description" content="Si estás buscando un desarrollador web para tu marca, créeme, estás en el lugar correcto." />
		<meta property="og:image" content="" />
		<meta property="og:type" content="website" />
		<meta name="description" content="Creador y diseñador de interfaces de usuario para la Web" />
		<meta name="keywords" content="desarrollador web, portafolio web, creador de interfaces web"/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen">
		<slot />
	</body>
</html>


<style is:global>
	html{
		scroll-behavior: smooth;
	}

</style>
